<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="Base.Theme.MyApplication" parent="Theme.AppCompat.DayNight.NoActionBar">
        <item name="android:textAllCaps">false</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowActionBar">false</item>
        <item name="android:windowFullscreen">true</item>
        <item name="android:windowContentOverlay">@color/Dark</item>
        <!--        <item name="android:navigationBarColor">@color/Transparent</item>-->
    </style>

    <style name="App.Theme.SplashScreen" parent="Base.Theme.MyApplication" />
    <style name="Theme.App.SplashScreen" parent ="App.Theme.SplashScreen">
        <item name="android:windowSplashScreenBackground">@color/Dark</item>
        <item name="android:windowSplashScreenAnimatedIcon">@drawable/ic_launcher_splash_foreground</item>
        <item name="postSplashScreenTheme">@style/Base.Theme.MyApplication</item>
    </style>
</resources>